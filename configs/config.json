{
    "name": "DnCNN",
    "experim_name": "DnCNN_residual_Chen_deep17",
    "seeds": [42],
    "sigma": 0.05,

    "model":{
        "depth": 17,
        "n_channels": 64,
        "image_channels": 1,
        "kernel_size": 3,
        "padding": 1,
        "architecture": "residual",
        "spectral_norm": "Chen",
        "beta": 0.0001
    },


    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0.0
        }
    },


    "train_loader": {
        "target_dir": "data/singlecoil_train_5_2_0.05/Target_tensors",
        "noise_dirs": ["data/singlecoil_train_5_2_0.05/Noise_tensors_1", "data/singlecoil_train_5_2_0.05/Noise_tensors_2"],
        "batch_size": 12,
        "shuffle": true,
        "num_workers": 0
    },


    "val_loader": {
        "target_dir": "data/singlecoil_validation_5_1_0.05/Target_tensors",
        "noise_dirs": ["data/singlecoil_validation_5_1_0.05/Noise_tensors_1"],
        "batch_size": 12,
        "shuffle": false,
        "num_workers": 0
    },

    "test_loader": {
        "target_dir": "data/singlecoil_test_5_1_0.05/Target_tensors",
        "noise_dirs": ["data/singlecoil_test_5_1_0.05/Noise_tensors_1"],
        "batch_size": 1,
        "shuffle": false,
        "num_workers": 0
    },

    "trainer": {
        "epochs": 600,
        "save_dir": "saved/",
        "save_period": 25,
        
        "tensorboardX": true,
        "log_dir": "saved/",
        "log_per_iter": 100,

        "val": true,
        "val_per_epochs": 25
    }
}
