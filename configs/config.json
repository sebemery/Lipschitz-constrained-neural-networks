{
    "name": "DnCNN",
    "experim_name": "test",
    "seeds": [42],
    "sigma": 0.05,

    "model":{
        "depth": 4,
        "n_channels": 64,
        "image_channels": 1,
        "kernel_size": 3,
        "padding": 1,
        "architecture": "residual",
        "spectral_norm": "Chen",
        "beta": 0.0001
    },


    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0.0
        }
    },


    "train_loader": {
        "target_dir": "data/train_dummy/target",
        "noise_dirs": ["data/train_dummy/noise1", "data/train_dummy/noise2"],
        "batch_size": 25,
        "shuffle": true,
        "num_workers": 0
    },


    "val_loader": {
        "target_dir": "data/val_dummy/target",
        "noise_dirs": ["data/val_dummy/noise1"],
        "batch_size": 25,
        "shuffle": false,
        "num_workers": 0
    },

    "test_loader": {
        "target_dir": "data/singlecoil_test_5_1_0.05/Target_tensors",
        "noise_dirs": ["data/singlecoil_test_5_1_0.05/Noise_tensors_1"],
        "batch_size": 1,
        "shuffle": false,
        "num_workers": 0
    },

    "trainer": {
        "epochs": 20,
        "save_dir": "saved/",
        "save_period": 5,
        
        "tensorboardX": true,
        "log_dir": "saved/",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
