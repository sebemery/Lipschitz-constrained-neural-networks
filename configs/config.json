{
    "name": "DnCNN",
    "experim_name": "DnCNN_direct_false",
    "seeds": [42],
    "sigma": 0.1,

    "model":{
        "depth": 4,
        "n_channels": 64,
        "image_channels": 1,
        "kernel_size": 3,
        "padding": 1,
        "architecture": "direct",
        "spectral_norm": false
    },


    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0
        }
    },


    "train_loader": {
        "target_dir": "data/singlecoil_train_5_2_0.1/Target_tensors",
        "noise_dirs": ["data/singlecoil_train_5_2_0.1/Noise_tensors_1", "data/singlecoil_train_5_2_0.1/Noise_tensors_2"],
        "batch_size": 200,
        "shuffle": true,
        "num_workers": 0
    },


    "val_loader": {
        "target_dir": "data/singlecoil_validation_5_1_0.1/Target_tensors",
        "noise_dirs": ["data/singlecoil_validation_5_1_0.1/Noise_tensors_1"],
        "batch_size": 100,
        "shuffle": false,
        "num_workers": 0
    },

    "test_loader": {
        "target_dir": "data/singlecoil_test_5_1_0.1/Target_tensors",
        "noise_dirs": ["data/singlecoil_test_5_1_0.1/Noise_tensors_1"],
        "batch_size": 1,
        "shuffle": false,
        "num_workers": 0
    },

    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 25,
        
        "tensorboardX": true,
        "log_dir": "saved/",
        "log_per_iter": 100,

        "val": true,
        "val_per_epochs": 25
    }
}
