{
    "name": "DnCNN",
    "experim_name": "DnCNN4_halfaveraged_15_nosn",
    "seeds": [42],
    "dataset": "BSD500",
    "sigma": 15,

    "model":{
        "depth": 4,
        "n_channels": 64,
        "image_channels": 1,
        "kernel_size": 3,
        "padding": 1,
        "architecture": "residual",
        "spectral_norm": "None",
        "batchnorm": false,
        "beta": 0.6,
        "activation_type": "relu",
        "shared_activation": false,
        "shared_channels": false,
        "QP": "cvxpy",
        "spline_init" : "relu",
        "spline_size": 51,
        "spline_range": 0.1,
        "slope_diff_threshold": 0,
        "sparsify_activations" : false,
        "hyperparam_tuning" : false,
        "lipschitz" : false,
        "lmbda" : 1e-4,
        "outer_norm" : 1,
        "weight_decay" : 5e-4
    },


    "optimizer": {
        "type": ["Adam"],
        "args":{
            "lr": 1e-3,
            "weight_decay": 0.0,
            "momentum": 0.9
        }
    },


    "train_loader": {
        "target_dir": "data/train_BSD500_preprocessed",
        "noise_dirs": ["data/singlecoil_train_5_2_0.05/Noise_tensors_1", "data/singlecoil_train_5_2_0.05/Noise_tensors_2"],
        "batch_size": 128,
        "shuffle": true,
        "num_workers": 0
    },


    "val_loader": {
        "target_dir": "data/val_BSD500_preprocessed",
        "noise_dirs": ["data/singlecoil_validation_5_1_0.05/Noise_tensors_1"],
        "batch_size": 1,
        "shuffle": false,
        "num_workers": 0
    },

    "test_loader": {
        "target_dir": "data/singlecoil_test_5_1_0.05/Target_tensors",
        "noise_dirs": ["data/singlecoil_test_5_1_0.05/Noise_tensors_1"],
        "batch_size": 1,
        "shuffle": false,
        "num_workers": 0
    },

    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 5,
        
        "tensorboardX": true,
        "log_dir": "saved/",
        "log_per_iter": 100,

        "val": true,
        "val_per_epochs": 5
    }
}
